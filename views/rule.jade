extends layout

block content
  .header
    h1= rule.title
  .content
    .kings-rule
      .image
        if rule.image
          img(src=rule.image)
        else
          .no-image 
            span ?
      .description
        p= rule.description
      .actions
        .share
          .pure-form
            .pure-g
              .pure-u-16-24
                input.pure-u-23-24(type='text', value=rule.permalink, readonly='')
              .pure-u-8-24
                button.pure-u-1.pure-button.pure-button-secondary(type='button') Share
        .different-rule
          a.pure-button.pure-button-primary(href='/rule') Get a different rule
